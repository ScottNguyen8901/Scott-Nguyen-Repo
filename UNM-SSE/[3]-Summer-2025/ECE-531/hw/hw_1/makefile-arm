BUILDROOT_HOME=/home/scott_nguyen_8901/buildroot

CC=$(BUILDROOT_HOME)/output/host/usr/bin/arm-linux-gcc
CFLAGS=--sysroot=$(BUILDROOT_HOME)/output/staging
LIBS=-lcurl

SRC=hw.c
OBJ=$(SRC:.c=.o)
MAIN=hw

RM=rm -rf

.c.o:
	$(CC) $(CFLAGS) -c $< -o $@

$(MAIN): $(OBJ)
	$(CC) $(CFLAGS) -o $(MAIN) $(OBJ) $(LIBS)

all: $(MAIN)

clean:
	$(RM) $(OBJ) $(MAIN)
